<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-9">
                <h4 class="card-title">Tài khoản</h4>
              </div>
              <div class="col-3 text-right">
                <%= link_to "+ Thêm tài khoản ",  new_user_registration_path(), class: "btn btn-new-item btn-icon-text"%>
              </div>
            </div>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Tên</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Ảnh đại diện</th>
                    <th scope="col">Thao tác</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |c| %>
                    <tr>
                      <td><%= c.name%></td>
                      <td><%= c.email%></td>
                      <td><%= c.role.description%></td>
                      <td>
                        <% if c.avatar.present?%>
                          <%= image_tag c.avatar.thumb.url%>
                        <% end %>
                      </td>
                      <td>
                        <div>
                          <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe,  edit_admin_user_path(c), class: "btn btn-edit"%>
                          <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, admin_user_path(c) ,method: :delete, data: {confirm: 'Bạn có muốn xoá?' }, class: "btn btn-delete" %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <%= paginate @users, outer_window: 2 %>
            <div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  var flashMessages = {
    success: '<%= j flash[:success] %>',
    error: '<%= j flash[:error] %>',
    // Add other types of flash messages if needed
  };
</script>
<%= javascript_pack_tag 'show_toast'%>
