<%= javascript_pack_tag 'tinymce', 'data-turbolinks-track': 'reload' %>
<%= form_with(model: [:admin, @post], local: true ) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, class: "form-control" %>

  <%= form.label :slug %>
  <%= form.text_field :slug, class: "form-control" %>

  <%= form.label :intro %>
  <%= form.text_area :intro, class: "form-control" %>

  <%= form.label :content %>
  <%= form.text_area :content, class: "form-control tinymce" %>

  <%= form.label :category %>
  <br>
  <%= form.select :category_id, Category.all.map{|r| [r.name, r.id] }%>
  <br>

  <%= form.label :hide_status %>
  <%= form.check_box :hide_status, {}, true, false %>

  <%= form.submit %>
<% end %>
