<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Slug</th>
      <th scope="col">Content</th>
      <th scope="col">Category</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |c| %>
      <tr>
        <td><%= c.title%></td>
        <td><%= c.slug%></td>
        <td><%= c.content%></td>
        <td><%= c.category.name%></td>
        <td>
          <div>
            <%= link_to "Sửa",  edit_admin_post_path(c)%>
            <%= link_to "Xoá", admin_post_path(c),method: :delete, data: {confirm: 'Bạn có muốn xoá?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts, outer_window: 2 %>
<div class="pagination_infor">
  <%= page_entries_info @posts %>
</div>


