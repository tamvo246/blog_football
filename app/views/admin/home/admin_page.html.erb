<div class="main-panel">
<div class="content-wrapper">
  <div class="row">
    <div class="col-md-12 grid-margin">
      <div class="row">
        <div class="col-12 col-xl-8 mb-4 mb-xl-0">
          <h3 class="font-weight-bold">Welcome to Admin</h3>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 grid-margin stretch-card">
      <div class="card tale-bg">
        <div class="card-people mt-auto">
          <%# <img src="images/dashboard/people.svg" alt="people"> %>
          <%= image_tag asset_path('people.svg') %>
          <div class="weather-info">
            <div class="d-flex">

            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 grid-margin transparent">
      <div class="row">
        <div class="col-md-6 mb-4 stretch-card transparent">
          <div class="card card-tale">
            <div class="card-body">
              <p class="mb-4">Tổng bài viết</p>
              <p class="fs-30 mb-2"><%= @post_count%></p>
              <p>thuộc <%= @category_count%> thể loại khác nhau</p>
              <p>với <%= @view_count%> lượt xem</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-4 stretch-card transparent">
          <div class="card card-dark-blue">
            <div class="card-body">
              <p class="mb-4">Tổng khoá học</p>
              <p class="fs-30 mb-2"><%= @course_count %></p>
              <p>với <%= @student_count %> học viên</p>
              <p>và <%= @coach_count %> huấn luyện viên</p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
          <div class="card card-light-blue">
            <div class="card-body">
              <p class="mb-4">Tổng số người liên hệ</p>
              <p class="fs-30 mb-2"><%= @contact_count %></p>
              <%# <p>2.00% (30 days)</p> %>
            </div>
          </div>
        </div>
        <div class="col-md-6 stretch-card transparent">
          <div class="card card-light-danger">
            <div class="card-body">
              <p class="mb-4">Tổng số hình ảnh album</p>
              <p class="fs-30 mb-2"><%= @image_count %></p>
              <%# <p>0.22% (30 days)</p> %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
